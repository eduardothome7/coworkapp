<div class="row">
	<div class="col-md-8 col-md-offset-2">
		  <%= render('room_steps/step_progress', :locals => {@step_1 => 'complete', @step_2 => 'complete', :step_3 => 'complete', :step_4 => 'disabled' }) %>

  <h3>Álbum da Sala</h3>
  <hr>
  <%= form_for @room, url: wizard_path, multipart: true, method: :put do |f| %>
    
    <% if @room.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@room.errors.count, "erros") %> encontrados durante o cadastro da sala:</h4>

        <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><span class="glyphicon glyphicon-remove"></span> <%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Imagem" %>
      <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %> 
    </div>

    <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <%= link_to 'Voltar', previous_wizard_path %>
      </div>  
      <div class="col-md-3">
        <%= link_to 'Depois eu adiciono', next_wizard_path %>
      </div>   
      <div class="col-md-3">
        <%= f.submit "Salvar Espaço", class: 'btn btn-primary btn-block'  %>
      </div>
    </div>
  </div>

<% end %>