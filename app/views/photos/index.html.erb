<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.room_id %></td>
        <td><%= photo.title %></td>
        <td><%= photo.url %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Edit', edit_room_photo_path([photo.room, photo]) %></td>
        <td><%= link_to 'Destroy', [photo.room, photo], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_room_photo_path(@room) %>
