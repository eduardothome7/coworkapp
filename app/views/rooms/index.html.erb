<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cep</th>
      <th>Address</th>
      <th>N</th>
      <th>Ngb</th>
      <th>City</th>
      <th>Country</th>
      <th>Telephone</th>
      <th>Celphone</th>
      <th>Picture</th>
      <th>Email</th>
      <th>Facebook profile</th>
      <th>Instagram profile</th>
      <th>Open at</th>
      <th>Close at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.cep %></td>
        <td><%= room.address %></td>
        <td><%= room.n %></td>
        <td><%= room.ngb %></td>
        <td><%= room.city %></td>
        <td><%= room.country %></td>
        <td><%= room.telephone %></td>
        <td><%= room.celphone %></td>
        <td><%= room.picture %></td>
        <td><%= room.email %></td>
        <td><%= room.facebook_profile %></td>
        <td><%= room.instagram_profile %></td>
        <td><%= room.open_at %></td>
        <td><%= room.close_at %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: {confirm: 'Are you sure?', verify: 'Foo', verify_text: 'Digite o nome da Sala para excluir'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
